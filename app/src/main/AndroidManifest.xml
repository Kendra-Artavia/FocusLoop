<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        >

        <!-- MainActivity: debe ser exportada para ser lanzada por el sistema -->
        <activity android:name=".MainActivity"
            android:exported="true"> <!-- MainActivity debe tener exported=true -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ScreenActivity: tambiÃ©n debe ser exportada si se va a acceder desde otras actividades -->
        <activity android:name=".ScreenActivity"
            android:exported="true" /> <!-- Set export to true to allow navigation to this activity -->

    </application>
</manifest>
