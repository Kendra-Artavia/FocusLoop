<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/image_3"
        android:roundIcon="@drawable/image_3"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:label="@string/app_name"
        >

        <!-- Launcher -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Pantalla con 3 opciones -->
        <activity
            android:name=".activities.ScreenActivity"
            android:exported="false"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity"/>
        </activity>

        <!-- Nueva Tarea -->
        <activity
            android:name=".activities.TaskActivity"
            android:exported="false"
            android:parentActivityName=".activities.ScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScreenActivity"/>
        </activity>

        <!-- SesiÃ³n Pomodoro -->
        <activity
            android:name=".activities.PomodoroActivity"
            android:exported="false"
            android:parentActivityName=".activities.ScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScreenActivity"/>
        </activity>

        <!-- Mis Tareas -->
        <activity
            android:name=".activities.MyTasksActivity"
            android:exported="false"
            android:parentActivityName=".activities.ScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.ScreenActivity"/>
        </activity>




    </application>

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" android:required="true"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

</manifest>
